<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="article_detail_toolbar">
        <item name="android:colorControlNormal">#FFFFFFFF</item>
    </style>

    <style name="MatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">230dp</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#E91E63</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>